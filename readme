# backendapp-deployment.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: backendapp
  namespace: dev
spec:
  replicas: 3 # adjust the number of replicas as needed
  selector:
    matchLabels:
      app: backendapp
  template:
    metadata:
      labels:
        app: backendapp
    spec:
      containers:
      - name: backendapp
        image: <your-ecr-repo>/backendapp:latest # replace <your-ecr-repo> with your ECR repository URI
        ports:
        - containerPort: 8080 # adjust the port if your backend listens on a different port
        env:
          - name: AWS_REGION
            value: <your-aws-region> # specify your AWS region
          # Add other environment variables as needed

---

# backendapp-service.yaml

apiVersion: v1
kind: Service
metadata:
  name: backendapp
  namespace: dev
spec:
  selector:
    app: backendapp
  ports:
    - protocol: TCP
      port: 8080 # specify the port your backend listens on
      targetPort: 8080 # specify the port your backend container exposes
  type: NodePort # Expose the service as a NodePort
